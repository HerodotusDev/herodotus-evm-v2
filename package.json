{
  "name": "herodotus-evm-v2",
  "version": "2.0.0",
  "repository": "git@github.com:HerodotusDev/herodotus-evm-v2.git",
  "author": "Herodotus Ltd <hello@herodotus.dev>",
  "license": "GPL-3.0",
  "scripts": {
    "preinstall": "npx only-allow bun",
    "prettier": "prettier --write --list-different ./*",
    "prettier:check": "prettier --check .",
    "forge:build": "forge build && bun forge:selectors",
    "forge:build:zksync": "forge build --zksync && bun forge:selectors",
    "forge:test": "forge test",
    "forge:anvil": "anvil",
    "forge:selectors": "bun ts-helpers/get-all-function-selectors.ts",
    "forge:deploy": "source .env && export PRIVATE_KEY=$ANVIL_PRIVATE_KEY && forge script script/deploy/Satellite.s.sol:Deploy -vvv",
    "forge:deploy:anvil": "source .env && export PRIVATE_KEY=$ANVIL_PRIVATE_KEY && forge script script/deploy/Satellite.s.sol:Deploy --fork-url $ANVIL_RPC_URL --broadcast -vvv",
    "forge:deploy:sepolia": "source .env && forge script --chain sepolia script/deploy/Satellite.s.sol:Deploy --rpc-url $SEPOLIA_RPC_URL --broadcast --verify -vvv",
    "test_connection:optimism": "source .env && ETHERSCAN_API_KEY=$L1_ETHERSCAN_API_KEY forge script --chain sepolia script/TestConnectionOptimism.s.sol:TestConnectionOptimism --rpc-url $SEPOLIA_RPC_URL --broadcast -vvvv",
    "test_connection:arbitrum": "source .env && ETHERSCAN_API_KEY=$L1_ETHERSCAN_API_KEY forge script --chain sepolia script/TestConnectionArbitrum.s.sol:TestConnectionArbitrum --rpc-url $SEPOLIA_RPC_URL --broadcast -vvvv",
    "forge:deploy:update": "source .env && export PRIVATE_KEY=$ANVIL_PRIVATE_KEY && forge script -vvv",
    "forge:deploy:update:anvil": "source .env && export PRIVATE_KEY=$ANVIL_PRIVATE_KEY && forge script --fork-url $ANVIL_RPC_URL --broadcast -vvv",
    "forge:deploy:update:sepolia": "source .env && forge script --chain sepolia --rpc-url $SEPOLIA_RPC_URL --broadcast --verify -vvv",
    "clear": "rm -rf out cache",
    "clear:full": "bun run clear && rm -rf node_modules",
    "deploy:11155111": "source .env && ETHERSCAN_API_KEY=$L1_ETHERSCAN_API_KEY forge script --chain sepolia script/deploy/chains/11155111.s.sol:Deploy --rpc-url $SEPOLIA_RPC_URL --broadcast --verify -vvv --slow",
    "deploy:421614": "source .env && ETHERSCAN_API_KEY=$ARBITRUM_ETHERSCAN_API_KEY forge script --chain 421614 script/deploy/chains/421614.s.sol:Deploy --rpc-url $ARBITRUM_SEPOLIA_RPC_URL --broadcast --verify -vvv --slow",
    "deploy:11155420": "source .env && ETHERSCAN_API_KEY=$OPTIMISM_ETHERSCAN_API_KEY forge script --chain 11155420 script/deploy/chains/11155420.s.sol:Deploy --rpc-url $OPTIMISM_SEPOLIA_RPC_URL --broadcast --verify -vvv --slow",
    "deploy:300": "source .env && ETHERSCAN_API_KEY=$ZKSYNC_ETHERSCAN_API_KEY forge script --zksync --chain 300 script/deploy/chains/300.s.sol:Deploy --rpc-url $ZKSYNC_SEPOLIA_RPC_URL --verifier-url $ZKSYNC_SEPOLIA_VERIFIER --broadcast --verify -vvv --slow",
    "connection:11155111_to_421614": "source .env && ETHERSCAN_API_KEY=$ARBITRUM_ETHERSCAN_API_KEY forge script --chain 421614 script/connections/11155111_to_421614.s.sol:SetupArbitrum --rpc-url $ARBITRUM_SEPOLIA_RPC_URL --broadcast -vvv && ETHERSCAN_API_KEY=$L1_ETHERSCAN_API_KEY forge script --chain sepolia script/connections/11155111_to_421614.s.sol:SetupL1 --rpc-url $SEPOLIA_RPC_URL --broadcast -vvv",
    "connection:11155111_to_11155420": "source .env && ETHERSCAN_API_KEY=$OPTIMISM_ETHERSCAN_API_KEY forge script --chain 11155420 script/connections/11155111_to_11155420.s.sol:SetupOptimism --rpc-url $OPTIMISM_SEPOLIA_RPC_URL --broadcast -vvv && ETHERSCAN_API_KEY=$L1_ETHERSCAN_API_KEY forge script --chain sepolia script/connections/11155111_to_11155420.s.sol:SetupL1 --rpc-url $SEPOLIA_RPC_URL --broadcast -vvv"
  },
  "devDependencies": {
    "only-allow": "^1.2.1",
    "prettier": "^3.4.2",
    "prettier-plugin-solidity": "^1.4.1",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}